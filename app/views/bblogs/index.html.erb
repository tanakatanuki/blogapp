<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6 blog-panel">
      <h1>ブログ一覧</h1>
      
      <p><%= notice %></p>
  
    <!--<div class="table-responsive">-->
      <table class="table table-striped">
          <tr>
              <th>タイトル</th>
              <th>内容</th>
              <th>詳細</th>
              <th>編集</th>
              <th>削除</th>
          </tr>
          
      <% @bblogs.each do |blog| %>
          <tr>
              <td><%= blog.name %></td>
              <td><%= blog.content %></td>
              <td><%= link_to "詳細確認", bblog_path(blog.id), class: "btn btn-default" %></td>
              <td><%= link_to "編集", edit_bblog_path(blog.id), class: "btn btn-info" %></td>
              <td><%= link_to "削除", bblog_path(blog.id), method: :delete ,data: {confirm: "本当に消してもいいですか"}, class:"btn btn-danger" %></td>
          </tr>
      <% end %>
      </table>
      
      <h2>
        <%= link_to "ブログ新規作成ページへ", new_bblog_path %>
      </h2>

    </div>
  </div>
</div>
